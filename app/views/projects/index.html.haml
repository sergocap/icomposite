.projects
  .categories_menu
    = link_to 'Все', root_path
    - Project.categories.each do |category|
      = link_to category, root_path(:category => category)

  %ul
    - @projects.each do |project|
      .project
        %li= link_to project.title, project_path(project.id)
        = link_to image_tag(project.preview.url, class: 'project_preview_on_index'), project_path(project.id)
