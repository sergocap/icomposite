- breadcrumb :project, @project
.project
  .show
    %h4= 'Выберите регион'

    .project_wrapper
      .left_wrapper
        = render partial: 'info_project', locals: { :project  => @project }
      .right_wrapper
        = render partial: '/users/my_places_on_project', locals: { :project  => @project }

      = render partial: '/regions/table', locals: { :regions  => @project.regions } if @project.development?
      = render partial: 'complete_table', locals: { :project => @project } if @project.complete?
