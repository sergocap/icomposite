<div class='header_wrapper'>
  <div class='main_banner'>

    <%= link_to root_path do %>
      <div class='logo'>
        <%#<span>омпозитен</span>%>
      </div>
      <%= link_to 'Админка', manage_projects_path, class: 'adminka_link'if current_user.try(:admin?) %>
    <% end %>

    <% if user_signed_in? %>
      <div class='user_logo' original-title='Личный кабинет <%= "#{current_user.name}" %>'>
        <%= link_to image_tag(current_user.avatar.url(:small)), user_path(current_user.id) %>
      </div>
    <% end %>

    <div class='user_actions'>
      <% if user_signed_in? %>
        <h4><%= current_user.name %></h4>
        <%= link_to 'Личный кабинет', user_path(current_user.id) %>
        <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>
      <% else %>
        <%= link_to 'Войти', new_user_session_path %>
        <%= link_to "Войти с помощью VK", user_vkontakte_omniauth_authorize_path %>
        <%= link_to 'Зарегистрироваться', new_user_registration_path %>
      <% end %>
    </div>

  </div>
  <%= render partial: 'layouts/header_categories_menu' %>
</div>
<%= breadcrumbs display_single_fragment: true, style: :bootstrap, separator: '' %>

