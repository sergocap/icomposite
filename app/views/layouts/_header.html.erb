<div class='header_wrapper'>
  <div class='main_banner'>
    <div class='logo'></div>

    <div class='actions'>
      <% if user_signed_in? %>
        <%= link_to 'Админка!', manage_projects_path if current_user.try(:admin?) %>
        <span><%= current_user.name %></span>
        <%= link_to 'Аккаунт', user_path(current_user.id) %>
        <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>
        <div class='user_logo' original-title='Личный кабинет <%= "#{current_user.name}" %>'>
          <%= link_to image_tag(current_user.avatar.url(:small), size: '64x64'), user_path(current_user.id) %>
        </div>

      <% else %>
        <%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Зарегистрироваться', new_user_registration_path %>
      <% end %>
    </div>

  </div>
  <%= render partial: 'layouts/header_categories_menu' %>
</div>
<%= breadcrumbs display_single_fragment: true, style: :bootstrap, separator: '' %>

