.place_image_input_hidden
  = f.input :image, input_html: { :class => 'place_image_load_button button' }
%div
  = f.input :comment, label: false, placeholder: 'Послание марсианам (60 символов)', :input_html => {:maxlength => 60, :size => 60, class: 'form-control' }
  = f.input :link,    label: false, placeholder: 'Ссылка', :input_html => { class: 'form-control' }
%button{ :type => 'button', :class => 'place_image_button btn btn-default' }= 'Выбрать изображение'
%div{ class: "#{ f.object.persisted? ? '' : 'disabled_div'}", style: 'display: inline-block'}
  = f.button :submit, name: 'crop_edit',  value: 'Выбрать область', class: 'go_crop btn btn-default'
  = f.button :submit, name: 'crop_color_edit',  value: 'Выбрать область и цвет', class: 'go_crop_with_color ', style: 'display: none'
  = f.button :submit, name: 'color_edit', value: 'Редактировать цвет', class: 'btn btn-default'
  = f.submit 'Опубликовать', class: 'btn btn-success'

