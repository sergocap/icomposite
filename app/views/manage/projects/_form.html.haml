= simple_form_for [:manage, @project] do |f|
  = f.input :title
  = f.input :description
  = f.input :category, input_html: { class: 'selectpicker' }

  - if params['action'] == 'new'

    = f.input :standart_K, input_html: { value: 10 }
    .place_size_wrapper
      = f.input :size_place_x, input_html: { value: 30 }
      = f.input :size_place_y, input_html: { value: 20 }

      .actions
        %button{ :type => 'button', :class => 'set_place_size_button btn btn-default btn-sm' }= 'Применить размер'

    .image_input_wrapper
      = f.input :image, input_html: { :class => 'image_load_button button' }
    .actions
      %button{ :type => 'button', :class => 'image_button btn btn-default btn-sm' }= 'Выбрать изображение'

    .image_edit_wrapper
      = image_tag @project.image.url, class: 'js-image_upload'
      %canvas{ :class => 'canvas'}

  .actions
    = f.button :submit, class: 'btn btn-default'
    = link_to 'Отмена', manage_projects_path
