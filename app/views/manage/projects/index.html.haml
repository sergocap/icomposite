%ul
  - @projects.each do |project|
    %li
      .project
        = link_to project.title, manage_project_path(project.id)
        = link_to 'Редактировать', edit_manage_project_path(project.id)
        = link_to 'Удалить', manage_project_path(project.id), method: 'DELETE', confirm: 'Вы уверены?'
= link_to 'Добавить', new_manage_project_path
