.user
  .edit
    = simple_form_for @user do |f|
      = f.input :name
      = f.input :email
      .user_avatar_input{ :style => 'display:none;' }
        = f.input :avatar, input_html: { :class => 'avatar_image_input button' }

      .image_upload
        = image_tag @user.avatar.url, class: 'js-avatar_upload'
      %button{ :type => 'button', :class => 'avatar_select_button button' }= 'Выбрать изображение'
      <br>
      = f.submit
